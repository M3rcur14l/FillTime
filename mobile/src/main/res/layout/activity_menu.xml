<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.timefiller.filltime.MenuActivity">

    <include layout="@layout/header"></include>


    <LinearLayout
        android:id="@+id/btn_news"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/menu_btn_selector"
        android:onClick="onMenuItemClick"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/news_120" />

        <com.timefiller.filltime.views.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="@string/news"
            android:textColor="@color/cyan_200"
            android:textSize="32sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cyan_200"></View>

    <LinearLayout
        android:id="@+id/btn_read"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/menu_btn_selector"
        android:onClick="onMenuItemClick"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/book_120" />

        <com.timefiller.filltime.views.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="@string/readings"
            android:textColor="@color/cyan_200"
            android:textSize="32sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cyan_200"></View>

    <LinearLayout
        android:id="@+id/btn_culture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/menu_btn_selector"
        android:onClick="onMenuItemClick"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/culture_120" />

        <com.timefiller.filltime.views.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="@string/culture"
            android:textColor="@color/cyan_200"
            android:textSize="32sp"
            android:textStyle="bold" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cyan_200"></View>
    <LinearLayout
        android:id="@+id/btn_food"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/menu_btn_selector"
        android:onClick="onMenuItemClick"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/food_120" />

        <com.timefiller.filltime.views.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="@string/food"
            android:textColor="@color/cyan_200"
            android:textSize="32sp"
            android:textStyle="bold" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cyan_200"></View>


    <LinearLayout
        android:id="@+id/btn_game"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/menu_btn_selector"
        android:onClick="onMenuItemClick"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/games_120" />

        <com.timefiller.filltime.views.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="@string/game"
            android:textColor="@color/cyan_200"
            android:textSize="32sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cyan_200"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <View
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_half_menu" />

        <LinearLayout
            android:id="@+id/img_random"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menu_random_selector"
            android:onClick="onRandomClick">

            <View

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/random_hole" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
